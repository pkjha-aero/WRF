;
;
;
; .r plot_k_profile
; 
;

z = FINDGEN(110)*10.0

pblh = 1000.0

prtz = 0.667*pblh 
sf2 = 4.0*prtz/27.0             ;maximum value of sf(z) = z*(1-z/h)^2 
prtnk = 1

FOR k=1,100 DO BEGIN
   sf[k] = (z[k]*(1.0-z[k]/prtz)^2)/sf2
   IF ( z[k] GT pblh ) THEN sf[k] = 0.0
ENDFOR


plot,sf[*],z[*]


END
